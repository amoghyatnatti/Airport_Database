@model IEnumerable<Airport_Database.Models.TestInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxScore)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TestNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TestNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TestNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
